<!-- DASHBOARD  -->
<div class='ui raised padded segment'>
  <h2 class='ui centered header'>ANALYTICS DASHBOARD</h2>
  <div class="ui three small grey statistics">
  <div class="statistic">
    <div class="value">
      <%= stats.avgTemperature %> BPM
    </div>
    <div class="label">
      AVG HEART RATE
    </div>
  </div>
  <div class="statistic">
    <div class="value">
      <%= stats.avgHumidity %> %
    </div>
    <div class="label">
      AVG LIGHT INTENSITY
    </div>
  </div>
  <div class="statistic">
    <div class="value">
      <%= stats.avgBrightness %> [0-1]
    </div>
    <div class="label">
      AVG SOS EMEGENCIES
    </div>
  </div>
 </div><!-- END STATS -->
 <div class='ui grid'>
   <div class="three column row">
    <div class="column">
      <canvas id='temperature-chart' ></canvas>
      <h4 class='ui centered header'>Heart Rate Zone</h4>
    </div>
    <div class="column">
      <canvas id='humidity-chart' ></canvas>
      <h4 class='ui centered header'>Light Intensity Zone</h4>
    </div>
    <div class="column">
      <canvas id='on-chart' ></canvas>
      <h4 class='ui centered header'>SOS Emergency Zone</h4>
    </div>
  </div>
 </div>

</div>

<!-- CONFIG FORM  -->
<h3 class='ui centered header'>Configuration</h3>

<form class='ui form' action='/configure' method='post'>
  <div class='fields'>
    <div class='four wide field'>
      <label>High BPM</label>
      <input type="number" name='setting[hotThreshold]' value='<%= settings.hotThreshold %>'>
    </div>
    <div class='four wide field'>
      <label>Low BPM</label>
      <input type="number" name='setting[coldThreshold]' value='<%= settings.coldThreshold %>'>
    </div>
    <div class='four wide field'>
      <label>High Intensity</label>
      <input type="number" name='setting[humidThreshold]' value='<%= settings.humidThreshold %>'>
    </div>
    <div class='four wide field'>
      <label>Low Intensity</label>
      <input type="number" name='setting[dryThreshold]' value='<%= settings.dryThreshold %>'>
    </div>
    <div class='four wide field'>
      <label>Frequent Usage</label>
      <input type="number" name='setting[darkThreshold]' value='<%= settings.darkThreshold %>'>
    </div>
    <div class="two wide field">
      <br>
      <input type='submit' class='ui submit button' name='configure' value='Submit'>
    </div>
  </div>

  <div class='ui raised padded segment'><img src="https://patch.com/img/cdn20/users/22511888/20160831/033637/styles/raw/public/article_images/1-1472672038-3535.jpg" width = 100% ></div>
